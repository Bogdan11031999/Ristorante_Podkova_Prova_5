<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewItemTypeMenu"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_marginTop="0dp"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints,RtlCompat" />

    <TextView
        android:id="@+id/textViewItemType"
        android:layout_width="350sp"
        android:layout_height="40sp"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewItemTypeMenu"
        tools:ignore="MissingConstraints,RtlCompat" />

    <ImageButton
        android:id="@+id/imageButtonAdd"
        android:layout_width="135dp"
        android:layout_height="50dp"
        android:layout_marginTop="0dp"
        app:layout_constraintEnd_toStartOf="@+id/imageButtonRemove"
        app:layout_constraintTop_toBottomOf="@+id/textViewItemType"
        app:srcCompat="@android:drawable/ic_input_add" />

    <ImageButton
        android:id="@+id/imageButtonRemove"
        android:layout_width="135dp"
        android:layout_height="50dp"
        android:layout_marginTop="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewItemType"
        app:srcCompat="@android:drawable/ic_delete" />

    <TextView
        android:id="@+id/textViewPieces"
        android:layout_width="60sp"
        android:layout_height="40sp"
        android:layout_marginBottom="4dp"
        android:gravity="center_vertical"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/imageButtonRemove"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textViewItemType"
        app:layout_constraintTop_toBottomOf="@+id/textViewItemTypeMenu"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="RtlCompat" />

    <Spinner
        android:id="@+id/spinnerNumbers"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_marginTop="0dp"
        android:background="#00000000"
        android:backgroundTint="#050505"
        android:backgroundTintMode="add"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/imageButtonAdd"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewItemType" />


</androidx.constraintlayout.widget.ConstraintLayout>